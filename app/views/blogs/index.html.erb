<% provide(:title, "Blogs" )%>
<h1>Blogs</h1>
<div class="bs-component">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Sub Title</th>
            <th>Posted At<th>
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
          <tr class="active">
            <td></td>
            <td><%= blog.title %></td>
            <td><%= blog.sub_title %></td>
            <td><%= blog.created_at.to_date %></td>
            <td>
              <%= link_to 'Read', blog, class: "btn btn-primary" %>
              <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-warning" %>
              <%= link_to 'Delete', blog, class: 'btn btn-danger',
                  method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
       <%= link_to 'New Blog', new_blog_path, class: "btn btn-primary" %>
    </div>
</div>

