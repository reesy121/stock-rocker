<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sub Title</th>
      <th>Posted At<th>
      <th>Author<th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
    <tr class="active">
      <td><%= blog.title %></td>
      <td><%= blog.sub_title %></td>
      <td><%= blog.created_at.to_date %></td>
      <td><%= blog.user.full_name %></td>
      <td>
        <%= link_to 'Read', blog, class: "btn btn-primary" %>
      <% if users_blog?(blog) %>
        <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-warning" %>
        <%= link_to 'Delete', blog, class: 'btn btn-danger',
            method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>