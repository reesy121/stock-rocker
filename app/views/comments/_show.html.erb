<h3><%= pluralize(@comments.count, 'Comment') %></h3>
<% @comments.each do |comment| %>
	<h4>By <%= comment.user.try(:full_name) %></h4>
	<h5><%= time_ago_in_words(comment.created_at) %> ago</h5>
	<p><%= comment.content %></p>
	<%= link_to 'Delete', comment, method: :delete, 
			data: { confirm: 'Delete your comment?' } if comment.user == current_user %>
<% end %>

